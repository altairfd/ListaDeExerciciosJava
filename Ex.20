import javax.swing.JOptionPane;

public class App {
    public static void main(String[] args) throws Exception {
        
        //Imprima o mes pelo número digitado Ex: 4 - Abril

        String numero;
        int semana;

        numero = JOptionPane.showInputDialog(null, "Digite um número referente ao dia da semana: ");
        semana = Integer.parseInt(numero);

        switch (semana) {
            case 1:
                JOptionPane.showMessageDialog(null, "1 - Domingo", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;
            
            case 2:
                JOptionPane.showMessageDialog(null, "2 - Segunda-feira", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;
            case 3:
                JOptionPane.showMessageDialog(null, "3 - Terça-feira", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;
            
            case 4:
                JOptionPane.showMessageDialog(null, "4 - Quarta-feira", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;
            
            case 5:
                JOptionPane.showMessageDialog(null, "5 - Quinta-feira", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;

            case 6:
                JOptionPane.showMessageDialog(null, "6 - Sextooou!", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;

            case 7:
                JOptionPane.showMessageDialog(null, "7 - Sabadooou!", "Dia da semana", JOptionPane.INFORMATION_MESSAGE);
                break;

            default:
                JOptionPane.showMessageDialog(null, "Informe um dia da semana valido");
                break;
        }

    }   
}
