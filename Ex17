import javax.swing.JOptionPane;

public class App {
   public static void main(String[] args) throws Exception {
    
   //Classificando um narrador
   
   String nome;
   String info;
   int idade;

   nome = JOptionPane.showInputDialog(null, "Informe o nome do nador: ");
   info = JOptionPane.showInputDialog(null, "Digite a idade do nadador: ");
   idade = Integer.parseInt(info);

   if (idade >= 5 && idade <= 7) {
      JOptionPane.showMessageDialog(null, "O aluno: " + nome + " está na turma Intantil A", "Turma", JOptionPane.INFORMATION_MESSAGE);
   }

   else if (idade >= 8 && idade <= 10) {
      JOptionPane.showMessageDialog(null, "O aluno: " + nome + " está na turma Intantil B", "Turma", JOptionPane.INFORMATION_MESSAGE);
   }
   else if (idade >= 11 && idade <= 13) {
      JOptionPane.showMessageDialog(null, "O aluno: " + nome + " está na turma Juvenil A", "Turma", JOptionPane.INFORMATION_MESSAGE);
   }
   else if (idade >= 14 && idade <= 17) {
      JOptionPane.showMessageDialog(null, "O aluno: " + nome + " está na turma Juvenil B", "Turma", JOptionPane.INFORMATION_MESSAGE);
   }

   else if (idade >= 18) {
      JOptionPane.showMessageDialog(null, "O aluno: " + nome + " está na turma Sênior", "Turma", JOptionPane.INFORMATION_MESSAGE);
   }
 }
}
