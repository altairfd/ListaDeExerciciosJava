import javax.swing.JOptionPane;

public class App {
    public static void main(String[] args) throws Exception {
    
        //Calcule a idade de uma pessoa a partide da sua idade e o ano atual
       int idade = 0;
       int ano = 0;
       int resultado = 0;
       String idadeAtual;
       String anoAtual;

       idadeAtual = JOptionPane.showInputDialog(null, "Informe a sua idade atual:", "Idade", JOptionPane.QUESTION_MESSAGE);
       idade = Integer.parseInt(idadeAtual);
       anoAtual = JOptionPane.showInputDialog(null, "Informe o ano atual:", "Ano atual", JOptionPane.QUESTION_MESSAGE);
       ano = Integer.parseInt(anoAtual);
       resultado = ano - idade;
       JOptionPane.showMessageDialog(null, resultado, "Seu ano de nascimento Ã©:", JOptionPane.INFORMATION_MESSAGE);


    }
}
